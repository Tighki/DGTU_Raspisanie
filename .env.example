# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# Storage Configuration
# Тип хранилища: memory (по умолчанию), sqlite, redis
STORAGE_TYPE=memory

# Для SQLite (рекомендуется для Dockploy)
SQLITE_PATH=sessions.db

# Для Redis (если STORAGE_TYPE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
